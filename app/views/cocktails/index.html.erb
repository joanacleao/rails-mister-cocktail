<div class = "container">
  <h1>Cocktails</h1>
  <div class = 'card' >
    <% @cocktails.each do |cocktail| %>
    <div class="row">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
    <% end %>

  </div>
  <div>  <%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-primary" %></div>
</div>


