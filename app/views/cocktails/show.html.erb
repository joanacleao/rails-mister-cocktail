<div class = "container">
  <div class = "card">

    <h1><%= @cocktail.name %></h1>

    <% @cocktail.doses.each do |dose| %>
    <div>
    <%= dose.ingredient.name %> - <%= dose.description %>  <%= link_to "Delete", dose_path(dose),
    method: :delete,
        data: { confirm: "Are you sure?" } %>

    </div>
    <% end  %>
  </div>
  <div>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "Back", cocktails_path%>
</div>
</div>
